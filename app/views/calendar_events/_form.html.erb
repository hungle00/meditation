<%= form_with(model: calendar_event, id: dom_id(CalendarEvent.new)) do |form| %>
  <% if calendar_event.errors.any? %>
    <div class="text-red-700">
      <ul>
        <% calendar_event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-2">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class: "" %>
  </div>

  <div class="my-2">
    <%= form.label :occurs_at, style: "display: block" %>
    <%= form.date_field :occurs_at, class: "w-48" %>
  </div>

  <div class="my-2">
    <%= form.label :color, style: "display: block" %>
    <%= form.select :color, options_for_select(["yellow", "red", "green", "indigo"]), {}, class: "w-48" %>
  </div>

  <div class="mt-3">
    <%= form.submit 'Add Event', class: "btn-primary" %>
  </div>
<% end %>
